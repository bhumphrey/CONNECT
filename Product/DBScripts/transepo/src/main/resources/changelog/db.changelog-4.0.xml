<?xml version="1.0" encoding="UTF-8"?>

<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-2.0.xsd
    http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd">

    <changeSet id="1" author="anon">
        <createTable tableName="transactionrepository">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false" />
            </column>
            <column name="transactionId" type="VARCHAR(100)">
                <constraints nullable="false" />
            </column>
            <column name="messageId" type="VARCHAR(100)">
                <constraints nullable="false" />
            </column>
            <column name="transactionTime" type="timestamp">
            </column>

        </createTable>


        <createIndex tableName="transactionrepository"
            indexName="messageId_idx">
            <column name="messageId" />
        </createIndex>

        <createIndex tableName="transactionrepository"
            unique="true" indexName="transID_UNIQUE">
            <column name="messageId" />
            <column name="transactionId" />
        </createIndex>

    </changeSet>

</databaseChangeLog>


 