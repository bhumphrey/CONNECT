<?xml version="1.0" encoding="UTF-8"?>

<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-2.0.xsd
    http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd">

    <changeSet id="1" author="anon">
        <createTable tablespace="subscriptionrepository"
            tableName="subscription">
            <column name="id" type="VARCHAR(128)">
                <constraints primaryKey="true" nullable="false" />
            </column>
            <column name="Subscriptionid" type="VARCHAR(128)">
            </column>
            <column name="SubscribeXML" type="CLOB">
            </column>
            <column name="SubscriptionReferenceXML" type="CLOB">
            </column>
            <column name="RootTopic" type="CLOB">
            </column>
            <column name="ParentSubscriptionId" type="VARCHAR(128)">
            </column>
            <column name="ParentSubscriptionReferenceXML" type="CLOB">
            </column>
            <column name="Consumer" type="VARCHAR(128)">
            </column>
            <column name="Producer" type="VARCHAR(128)">
            </column>
            <column name="PatientId" type="VARCHAR(128)">
            </column>
            <column name="PatientAssigningAuthority" type="VARCHAR(128)">
            </column>
            <column name="Targets" type="CLOB">
            </column>
            <column name="CreationDate" type="datetime">
            </column>
        </createTable>
    </changeSet>
</databaseChangeLog>


 